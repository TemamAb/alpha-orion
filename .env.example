# Alpha-Orion Environment Variables Template
# Copy this file to .env and fill in your values

# ===================
# OPENAI CONFIGURATION
# ===================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===================
# DATABASE CONFIGURATION
# ===================
# For free PostgreSQL, use Neon: https://neon.tech
DATABASE_URL=postgresql://user:password@host:5432/alpha_orion

# ===================
# REDIS CONFIGURATION  
# ===================
# For free Redis, use Upstash: https://upstash.com
REDIS_URL=redis://default:password@host:6379

# ===================
# BLOCKCHAIN CONFIGURATION
# ===================
# Get free RPC from Infura, Alchemy, or public RPCs
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
PRIVATE_KEY=your-private-key

# ===================
# APPLICATION CONFIGURATION
# ===================
FLASK_ENV=production
LOG_LEVEL=info
PORT=3000

# ===================
# JWT & SECURITY
# ===================
JWT_SECRET=your-jwt-secret-here
API_KEY=your-api-key-here

# ===================
# OPTIONAL: GCP (if still using some GCP services)
# ===================
# GCP_PROJECT_ID=alpha-orion
# GCP_REGION=us-central1
