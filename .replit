modules = ["python-3.12", "nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.development]
PORT = "3001"
NODE_ENV = "development"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/backend-services/services/user-api-service && PORT=3001 node src/index.js & cd /home/runner/workspace/dashboard && npx vite --port 5000 --host 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 3001
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd /home/runner/workspace/backend-services/services/user-api-service && PORT=5000 node src/index.js"]
build = ["bash", "-c", "cd /home/runner/workspace/dashboard && npm install --legacy-peer-deps && npx vite build"]
