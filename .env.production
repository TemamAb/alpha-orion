# ============================================
# ALPHA-ORION PRODUCTION CONFIGURATION
# ============================================
# ⚠️ SECURITY WARNING: This file contains placeholder values.
# All sensitive values MUST be set in Render Dashboard Environment Groups
# NEVER commit real API keys or secrets to this file

# ===== DEPLOYMENT MODE =====
DEPLOY_MODE=production

# ===== BLOCKCHAIN CONFIGURATION =====
# Ethereum mainnet RPC endpoint - Set in Render secrets
ETHEREUM_RPC_URL=USE_RENDER_SECRET
CHAIN_ID=1

# ===== HOT WALLET CONFIGURATION =====
# ⚠️ CRITICAL: Set in Render Dashboard
# PRIVATE_KEY must be stored in Render Secret Manager
PRIVATE_KEY=USE_RENDER_SECRET
EXECUTION_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# Max value per transaction (USD) - safety limit
MAX_TX_VALUE_USD=10000

# ===== FLASH LOAN PROVIDER =====
# Aave Flash Loan address (mainnet)
FLASH_LOAN_PROVIDER=0x87870Bca3F3f6335e32cdC0d59b7b238621C8292

# Flash loan fee (Aave: 0.05%)
FLASH_LOAN_FEE=0.0005

# ===== SMART CONTRACT CONFIGURATION =====
# Deployed FlashLoanArbitrage contract address (update after deployment)
ARBITRAGE_CONTRACT_ADDRESS=

# ===== PIMLICO GASLESS MODE =====
# ⚠️ CRITICAL: Set in Render Dashboard
PIMLICO_API_KEY=USE_RENDER_SECRET

# Pimlico Paymaster address (configured in Pimlico dashboard)
PIMLICO_PAYMASTER_ADDRESS=0x0000000000000000000000000000000000000000

# Fee recipient address for protocol fees
FEE_RECIPIENT_ADDRESS=0x0000000000000000000000000000000000000000

# ===== DEX ROUTERS =====
# Uniswap V3 Router
UNISWAP_ROUTER_V3=0x68b3465833fb72B5a828cCEd3294e3e6962E3786

# Uniswap V3 Quoter (for price discovery - no API key needed)
UNISWAP_QUOTER_V3=0xb27308f9F90D607463bb33eA1BeBb41C27CE5AB6

# Uniswap V2 Router
UNISWAP_ROUTER_V2=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D

# Sushiswap Router
SUSHISWAP_ROUTER=0xd9e1cE17f2641f24aE5D51AEe6325DAA6F3Dcf45

# Price Discovery Mode
DEX_AGGREGATOR=uniswap_v3

# ===== PROFIT CONFIGURATION =====
# Default destination wallet for profits
DEFAULT_PROFIT_WALLET=0x0000000000000000000000000000000000000000

# Minimum profit threshold to execute trade (USD)
MIN_PROFIT_THRESHOLD_USD=500

# ===== RISK MANAGEMENT =====
# Maximum slippage allowed (basis points: 50 = 0.5%)
MAX_SLIPPAGE_PERCENT=0.5

# Maximum position size (USD)
MAX_POSITION_SIZE_USD=50000

# Stop loss percentage
STOP_LOSS_PERCENT=5

# Gas price in gwei (will auto-update based on network conditions)
GAS_PRICE_GWEI=50

# ===== DATABASE =====
# ⚠️ Set in Render Dashboard - use fromDatabase reference in render.yaml
# DATABASE_URL is provided automatically by Render

# PostgreSQL pool size
DB_POOL_SIZE=20

# ===== REDIS CACHE =====
# ⚠️ Set in Render Dashboard - use fromService reference in render.yaml
# REDIS_URL is provided automatically by Render

# ===== GCP CONFIGURATION =====
GCP_PROJECT_ID=alpha-orion
GCP_REGION=us-central1

# Pub/Sub topic for trade execution events
PUBSUB_TOPIC=production-arbitrage-trades

# GCS bucket for trade history
GCS_BUCKET=alpha-orion-production-data

# BigQuery dataset
BQ_DATASET=arbitrage_metrics

# ===== MONITORING & ALERTS =====
# ⚠️ CRITICAL: Set in Render Dashboard
ETHERSCAN_API_KEY=USE_RENDER_SECRET
SENTRY_DSN=USE_RENDER_SECRET
SLACK_WEBHOOK_URL=USE_RENDER_SECRET
ALERT_EMAIL=alerts@alpha-orion.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=USE_RENDER_SECRET
SMTP_PASSWORD=USE_RENDER_SECRET

# ===== EXECUTION PARAMETERS =====
# Scan interval for opportunities (seconds)
OPPORTUNITY_SCAN_INTERVAL=30

# Trade confirmation timeout (seconds)
TRADE_CONFIRMATION_TIMEOUT=60

# Max retries for failed executions
MAX_EXECUTION_RETRIES=3

# ===== TOKEN ADDRESSES =====
# USDC (stablecoin for denomination)
USDC_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48

# WETH (wrapped ETH)
WETH_ADDRESS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2

# DAI
DAI_ADDRESS=0x6B175474E89094C44Da98b954EedeAC495271d0F

# USDT
USDT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7

# ===== SECURITY =====
# ⚠️ CRITICAL: Set in Render Dashboard - JWT_SECRET must be secure
JWT_SECRET=USE_RENDER_SECRET

# API rate limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# ===== LOGGING =====
# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===== FEATURE FLAGS =====
# Enable/disable features
FEATURE_FLASH_LOAN=true
FEATURE_TRIANGULAR_ARBITRAGE=true
FEATURE_AUTO_WITHDRAWAL=true
FEATURE_AUTOMATED_EXECUTION=true

# ===== NODE ENVIRONMENT =====
NODE_ENV=production
