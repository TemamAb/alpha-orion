# Environment Configuration for Arbitrage Flash Loan Backend

# Application Settings
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://username:password@localhost:27017/arbitrage_prod
MONGO_USERNAME=your_mongo_username
MONGO_PASSWORD=your_mongo_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# API Keys and Secrets
GEMINI_API_KEY=your_gemini_api_key_here
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# Blockchain Configuration
INFURA_PROJECT_ID=your_infura_project_id
PRIVATE_KEY=your_wallet_private_key
FLASH_LOAN_CONTRACT_ADDRESS=0x...your_flash_loan_contract_address
MULTICALL_CONTRACT_ADDRESS=0x...your_multicall_contract_address

# Network Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_PROJECT_ID

# DEX Configuration
UNISWAP_V2_ROUTER=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
UNISWAP_V3_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564
SUSHISWAP_ROUTER=0xd9e1cE17f2641f24aE83637ab66a2cca9C378B9F
PANCAKESWAP_ROUTER=0x10ED43C718714eb63d5aA57B78B54704E256024E

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
FLASH_LOAN_RATE_LIMIT_MAX=5
CORS_ORIGIN=https://your-frontend-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log

# Monitoring
PROMETHEUS_METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=alerts@yourcompany.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUTO_TRADING=false
ENABLE_RISK_MANAGEMENT=true
ENABLE_MULTI_CHAIN_SUPPORT=false

# Risk Management
MAX_POSITION_SIZE_USD=1000000
MAX_DAILY_LOSS_USD=50000
CIRCUIT_BREAKER_THRESHOLD=0.1
SLIPPAGE_TOLERANCE=0.005

# Performance Settings
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_MS=30000
