FROM python:3.9-slim

WORKDIR /app

# Copy dashboard HTML
COPY ./frontend/foundational-dashbaord.html /app/index.html
COPY ./frontend/ /app/static/

# Create a simple Python HTTP server
RUN echo 'from http.server import HTTPServer, SimpleHTTPRequestHandler; HTTPServer(("", 8080), SimpleHTTPRequestHandler).serve_forever()' > server.py

EXPOSE 8080
CMD ["python", "server.py"]
